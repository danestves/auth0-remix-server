{
  "version": "0.0.0-dev",
  "name": "auth0-remix-server",
  "license": "GPL-3.0",
  "keywords": [
    "auth0",
    "authentication",
    "react",
    "remix",
    "ssr"
  ],
  "description": "A secure Auth0 integration for server-side Remix apps",
  "bugs": {
    "url": "https://github.com/meza/auth0-remix-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meza/auth0-remix-server.git"
  },
  "homepage": "https://github.com/meza/auth0-remix-server#readme",
  "author": "meza",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prebuild": "rimraf ./dist .cache",
    "build": "run-s build:cjs build:mjs",
    "build:cjs": "tsup --no-splitting --format cjs --dts src/index.ts 'src/**/!(*.test).ts'",
    "build:mjs": "tsup --no-splitting --format esm --dts src/index.ts 'src/**/!(*.test).ts'",
    "ci": "run-s lint report",
    "clean": "rimraf ./dist .cache",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.tsx,.json src",
    "lint:typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:publint": "run-s clean build publint:run",
    "prepack": "npmignore --auto",
    "prepare": "lefthook install",
    "publint:run": "publint run",
    "release": "semantic-release",
    "report": "vitest --run --coverage",
    "test": "vitest --run"
  },
  "publishConfig": {
    "access": "public",
    "ignore": [
      "!dist/",
      "src",
      "tsconfig*",
      ".*",
      "*.yml",
      "vitest*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/prompt-cli": "17.4.4",
    "@evilmartians/lefthook": "^1.3.5",
    "@meza/tsconfig-base": "^1.1.0",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/is-ci": "^3.0.0",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitest/coverage-c8": "^0.29.0",
    "c8": "7.13.0",
    "eslint": "^8.35.0",
    "eslint-config-tailored-tunes": "^5.0.2",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-security": "^1.7.1",
    "is-ci": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "npmignore": "^0.3.0",
    "publint": "^0.1.10",
    "renamer": "^4.0.0",
    "rimraf": "^4.4.0",
    "semantic-release": "^20.1.0",
    "semantic-release-export-data": "^1.0.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "@remix-run/node": "1.x"
  },
  "dependencies": {
    "jose": "^4.13.0"
  }
}
